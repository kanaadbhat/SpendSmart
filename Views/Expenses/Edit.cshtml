@model FinanceApp.Models.Expense
@{
    ViewData["Title"] = "Edit Expense";
}

<div class="row mb-4">
    <div class="col-12">
        <h1 class="page-heading">
            <i class="bi bi-pencil me-2 text-primary"></i>Edit Expense
        </h1>
        <p class="page-description">Update expense information</p>
    </div>
</div>

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="bi bi-receipt me-2"></i>Expense Details
                </h5>
            </div>
            <div class="card-body">
                <form asp-action="Edit" method="post">
                    <input type="hidden" asp-for="Id" />
                    <div asp-validation-summary="All" class="text-danger mb-3"></div>
                    <div class="row g-3">
                        <div class="col-12">
                            <label asp-for="Description" class="form-label">
                                <i class="bi bi-text-paragraph me-1"></i>Description
                            </label>
                            <input asp-for="Description" class="form-control" placeholder="Enter expense description..." />
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="Amount" class="form-label">
                                <i class="bi bi-currency-dollar me-1"></i>Amount
                            </label>
                            <div class="input-group">
                                <span class="input-group-text">$</span>
                                <input asp-for="Amount" class="form-control" type="number" step="0.01" min="0.01" placeholder="0.00" />
                            </div>
                            <span asp-validation-for="Amount" class="text-danger"></span>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="CategoryId" class="form-label">
                                <i class="bi bi-tags me-1"></i>Category
                            </label>
                            <select asp-for="CategoryId" class="form-select" asp-items="@(new SelectList(ViewBag.Categories, "Id", "Name"))">
                                <option value="">Select a category...</option>
                            </select>
                            <span asp-validation-for="CategoryId" class="text-danger"></span>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="Date" class="form-label">
                                <i class="bi bi-calendar me-1"></i>Date
                            </label>
                            <input asp-for="Date" class="form-control" type="date" value="@Model.Date.ToString("yyyy-MM-dd")" />
                            <span asp-validation-for="Date" class="text-danger"></span>
                        </div>

                        <div class="col-12 mt-4">
                            <div class="d-flex gap-2">
                                <button type="submit" class="btn btn-primary">
                                    <i class="bi bi-check-circle me-2"></i>Update Expense
                                </button>
                                <a asp-action="Index" class="btn btn-secondary">
                                    <i class="bi bi-arrow-left me-2"></i>Back to List
                                </a>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 