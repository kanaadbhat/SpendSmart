@model FinanceApp.Models.Category
@{
    ViewData["Title"] = "Delete Category";
}

<div class="row mb-4">
    <div class="col-12">
        <h1 class="page-heading">
            <i class="bi bi-trash me-2 text-danger"></i>Delete Category
        </h1>
        <p class="page-description">Are you sure you want to delete this category?</p>
    </div>
</div>

<div class="row justify-content-center">
    <div class="col-lg-6">
        <div class="card border-danger">
            <div class="card-header bg-danger text-white">
                <h5 class="mb-0">
                    <i class="bi bi-exclamation-triangle me-2"></i>Confirm Deletion
                </h5>
            </div>
            <div class="card-body">
                <div class="alert alert-warning">
                    <i class="bi bi-exclamation-triangle me-2"></i>
                    <strong>Warning:</strong> This action cannot be undone. If this category has associated expenses, the deletion will be prevented.
                </div>

                <div class="row g-3">
                    <div class="col-12">
                        <label class="form-label fw-bold">Category Name</label>
                        <div class="d-flex align-items-center">
                            <div class="category-color-indicator me-2" style="background-color: @Model.Color;"></div>
                            <span>@Model.Name</span>
                        </div>
                    </div>

                    <div class="col-12">
                        <label class="form-label fw-bold">Description</label>
                        <p class="text-muted">@(Model.Description ?? "No description")</p>
                    </div>

                    <div class="col-12">
                        <label class="form-label fw-bold">Color</label>
                        <div class="d-flex align-items-center">
                            <div class="color-preview me-2" style="background-color: @Model.Color; width: 30px; height: 30px; border-radius: 6px;"></div>
                            <span class="text-muted">@Model.Color</span>
                        </div>
                    </div>

                    <div class="col-12">
                        <label class="form-label fw-bold">Associated Expenses</label>
                        <div class="d-flex align-items-center">
                            <span class="badge bg-secondary">@Model.Expenses.Count expenses</span>
                            @if (Model.Expenses.Count > 0)
                            {
                                <span class="text-danger ms-2">
                                    <i class="bi bi-exclamation-circle me-1"></i>Cannot delete category with expenses
                                </span>
                            }
                        </div>
                    </div>

                    <div class="col-12">
                        <label class="form-label fw-bold">Created</label>
                        <p class="text-muted">@Model.CreatedAt.ToString("MMMM dd, yyyy 'at' h:mm tt")</p>
                    </div>
                </div>

                <div class="mt-4">
                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex gap-2">
                            @if (Model.Expenses.Count == 0)
                            {
                                <button type="submit" class="btn btn-danger">
                                    <i class="bi bi-trash me-2"></i>Delete Category
                                </button>
                            }
                            else
                            {
                                <button type="button" class="btn btn-danger" disabled>
                                    <i class="bi bi-trash me-2"></i>Cannot Delete (Has Expenses)
                                </button>
                            }
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left me-2"></i>Back to List
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        @if (Model.Expenses.Count > 0)
        {
            <div class="card mt-4">
                <div class="card-header">
                    <h6 class="mb-0">
                        <i class="bi bi-list me-2"></i>Associated Expenses
                    </h6>
                </div>
                <div class="card-body">
                    <p class="text-muted">To delete this category, you must first remove or reassign all associated expenses.</p>
                    <div class="list-group list-group-flush">
                        @foreach (var expense in Model.Expenses.Take(5))
                        {
                            <div class="list-group-item bg-transparent border-0 d-flex justify-content-between align-items-center">
                                <div>
                                    <div class="fw-medium">@expense.Description</div>
                                    <small class="text-muted">@expense.Date.ToString("MMM dd, yyyy")</small>
                                </div>
                                <div class="text-end">
                                    <span class="fw-bold text-primary">$@expense.Amount.ToString("N2")</span>
                                </div>
                            </div>
                        }
                        @if (Model.Expenses.Count > 5)
                        {
                            <div class="list-group-item bg-transparent border-0 text-center">
                                <span class="text-muted">... and @(Model.Expenses.Count - 5) more expenses</span>
                            </div>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
.category-color-indicator {
    width: 16px;
    height: 16px;
    border-radius: 50%;
    display: inline-block;
}

.color-preview {
    border: 1px solid var(--border-color);
}
</style> 