@{
    ViewData["Title"] = "Dashboard";
}

<div class="row mb-4">
    <div class="col-12">
        <h1 class="page-heading">
            <i class="bi bi-speedometer2 me-2 text-primary"></i>Dashboard
        </h1>
        <p class="page-description">Welcome to your financial overview</p>
    </div>
</div>

<!-- Statistics Cards -->
<div class="row mb-4">
    <div class="col-md-4 mb-3">
        <div class="stats-card">
            <div class="stats-number">$@ViewBag.TotalExpensesThisMonth.ToString("N2")</div>
            <div class="stats-label">Total Expenses This Month</div>
        </div>
    </div>
    <div class="col-md-4 mb-3">
        <div class="stats-card">
            <div class="stats-number">@ViewBag.RecentExpenses.Count</div>
            <div class="stats-label">Recent Transactions</div>
        </div>
    </div>
    <div class="col-md-4 mb-3">
        <div class="stats-card">
            <div class="stats-number">@ViewBag.ChartData.Count</div>
            <div class="stats-label">Active Categories</div>
        </div>
    </div>
</div>


<div class="row">
    <!-- Chart Section -->
    <div class="col-lg-8 mb-4">
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="bi bi-pie-chart me-2"></i>Expenses by Category
                </h5>
            </div>
            <div class="card-body">
                <div class="chart-container" style="position: relative; height: 350px;">
                    <canvas id="expensesChart"></canvas>
                </div>
            </div>
        </div>
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="bi bi-bar-chart me-2"></i>Expenses by Month
                </h5>
            </div>
            <div class="card-body">
                <div class="chart-container" style="position: relative; height: 350px;">
                    <canvas id="expensesByMonthChart"></canvas>
                </div>
            </div>
        </div>
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="bi bi-graph-up-arrow me-2"></i>Monthly Trend
                </h5>
            </div>
            <div class="card-body">
                <div class="chart-container" style="position: relative; height: 350px;">
                    <canvas id="monthlyTrendChart"></canvas>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Expenses -->
    <div class="col-lg-4 mb-4">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">
                    <i class="bi bi-clock-history me-2"></i>Recent Expenses
                </h5>
                <a asp-controller="Expenses" asp-action="Index" class="btn btn-sm btn-primary">
                    View All
                </a>
            </div>
            <div class="card-body p-0">
                @if (ViewBag.RecentExpenses.Count > 0)
                {
                    <div class="list-group list-group-flush">
                        @foreach (var expense in ViewBag.RecentExpenses)
                        {
                            <div class="list-group-item bg-transparent border-0 d-flex justify-content-between align-items-center">
                                <div>
                                    <div class="fw-medium text-white">@expense.Description</div>
                                    <small class="text-muted">@expense.Date.ToString("MMM dd, yyyy")</small>
                                </div>
                                <div class="text-end">
                                    <div class="fw-bold text-primary">$@expense.Amount.ToString("N2")</div>
                                    @if (expense.Category != null)
                                    {
                                        <span class="category-badge" style="background-color: @expense.Category.Color;">
                                            @expense.Category.Name
                                        </span>
                                    }
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="text-center py-4">
                        <i class="bi bi-inbox text-muted" style="font-size: 3rem;"></i>
                        <p class="text-muted mt-2">No expenses yet</p>
                        <a asp-controller="Expenses" asp-action="Create" class="btn btn-primary btn-sm">
                            Add Your First Expense
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

